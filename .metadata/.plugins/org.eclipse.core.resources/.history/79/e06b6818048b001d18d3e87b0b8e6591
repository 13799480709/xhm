package cell;

import java.awt.Graphics;

public class Cell {
	
	private boolean alive=false;
	
	public boolean isAlive() {
		return alive;
	}
	public void die() {
		alive=false;
	}
	public void reborn() {
		alive = true;
	}
	public void draw(Graphics g,int x,int y,int size) {
		g.drawRect(x,y,size,size);
		//把细胞画上方框
		if(alive) {
			g.fillRect(x,y,size,size);
			//如果改细胞是活着的状态，则将该方框填起来（在棋盘中为黑色）
		}
	}

}
